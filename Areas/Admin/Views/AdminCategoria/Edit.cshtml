@model Aztromick2.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-white">Editar Categoria</h1>

<hr class="bg-white" />
<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn border-white text-white mt-3" />
            </div>
            <a class="btn text-white border-white mt-3" asp-action="Index">Voltar a pagina</a>
        </form>
    </div>
</div>


