@model IEnumerable<Aztromick2.Models.Pedido>
<h2 class="text-white">Pedidos Por Per√≠odo</h2>
<nav class="navbar navbar-dark text-white">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" method="post" asp-action="Relatorio">
            <div class="form-group">
                <div class="form-group">
                    <label for="di">Data Inicial</label>
                    <input type="date" class="form-control" name="di" value=@ViewData["di"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="df" value=@ViewData["df"] />
                </div>
            </div>

            <button type="submit" class="btn text-white border-white mt-3">Filtrar</button>
        </form>
    </div>
    <a class="btn text-white border-white mt-3 ms-2" asp-action="Index">Voltar a pagina</a> 
</nav>
<div class="panel panel-primary text-white">
    <div class="panel-heading">
        <h3 class="panel-title">Total de Pedidos = @Model.Count()</h3>
        <h3 class="panel-title">Total de Moveis nos Pedidos =
            @Model.Sum(obj => obj.TotalItensPedido).ToString()</h3>
        <h3 class="panel-title">Valor Total dos Pedidos = @Model.Sum(obj
            => obj.PedidoTotal).ToString("c")</h3>
    </div>
    <div class="panel-body text-white">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.PedidoId)
                    </th>
                    <th  class="text-white">
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th  class="text-white">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th  class="text-white">
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th  class="text-white">
                        @Html.DisplayNameFor(model => model.PedidoTotal)
                    </th>
                    <th  class="text-white">
                        @Html.DisplayNameFor(model =>

                                 model.TotalItensPedido)
                    </th>
                    <th  class="text-white">
                        @Html.DisplayNameFor(model =>

                                 model.PedidoEnviadoEm)
                    </th>
                </tr>
            </thead>
            <tbody  class="text-white">
                @foreach (var item in Model)
                {
                    <tr  class="text-white">
                        <td>
                            @Html.DisplayFor(modelItem => item.PedidoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem =>

                                     item.PedidoTotal)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem =>

                                     item.TotalItensPedido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem =>

                                     item.PedidoEnviadoEm)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>