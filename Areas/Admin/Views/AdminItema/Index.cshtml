@model ReflectionIT.Mvc.Paging.PagingList<Aztromick2.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-white">Itens</h1>

<form method="get" class="form-inline">
    <input name="filtro" class="form-control" placeholder="filtro" value="@Model.RouteValue["Filtro"]" />
    <button type="submit" class="btn text-white border-white mt-2">Procurar</button>
    Total de Moveis : @Model.TotalRecordCount
</form>

<div class="mt-2">
    <vc:pager paging-list="@Model"></vc:pager>
</div>

<p>
    <a class="btn border-white text-white mt-3" asp-action="Create">Criar um Item</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoDetalhada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemPequenaUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destaque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoCurta)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescricaoDetalhada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td>
                    <img src="@item.ImagemUrl" width="75px" asp-append-version="true">
                </td>
                <td>
                    <img src="@item.ImagemPequenaUrl" width="100px" asp-append-version="true">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ativo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destaque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaId)
                </td>
                <td>
                    <a class="btn  text-white" asp-action="Edit" asp-route-id="@item.ItemId">Editar</a>
                    <a class="btn  text-white" asp-action="Details" asp-route-id="@item.ItemId">Detalhes</a>
                    <a class="btn  text-white" asp-action="Delete" asp-route-id="@item.ItemId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
