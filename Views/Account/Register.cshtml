@model RegistroViewModel

    <tr>

            <div class="row d-flex justify-content-center">
                <div class="col-9 col-md-9 col-lg-6">
                    <h4 class="text-white text-center">Registrar usu√°rio</h4>
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <hr class="bg-white" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group text-white">
                            <label asp-for="UserName"> </label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-white"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Endereco"></label>
                            <input asp-for="Endereco" class="form-control" id="rua" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Numero"></label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Bairro"></label>
                            <input asp-for="Bairro" class="form-control" id="bairro" />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Cidade"></label>
                            <input asp-for="Cidade" class="form-control " id="cidade" disabled />
                            <span asp-validation-for="Cidade" class="text-danger"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Estado"></label>
                            <input asp-for="Estado" class="form-control" id="estado" disabled />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="form-group text-white">
                            <label asp-for="Cep"></label>
                            <input asp-for="Cep" class="form-control" id="cep"/>
                            <span asp-validation-for="Cep" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="col-md-8 mt-2">
                                <input type="submit" class="btn border-white text-white mt-3 " value="Registrar" />
                            </div>
                            <a class="btn text-white border-white mt-3" asp-controller="Home" asp-action="Index">Voltar a pagina</a>
                        </div>
                    </form>
                </div>
            </div>
    </tr>
