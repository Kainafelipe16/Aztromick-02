@model Pedido
<h3 class="text-white">Você esta a um passo de completar o seu pedido</h3>
<hr class="bg-white" />
<form asp-action="Checkout" method="post" class="form-horizontal col-10" role="form">
    <div class="row text-white">
        <div class="form-group col-md-6">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-white"></span>
        </div>
    </div>
    <div class="row text-white">
        <div class="form-group col-md-6">
            <label asp-for="Endereco1" class="control-label"></label>
            <input asp-for="Endereco1" class="form-control" />
            <span asp-validation-for="Endereco1" class="text-white"></span>
        </div>
        <div class="form-group col-md-6 text-white">
            <label asp-for="Endereco2" class="control-label"></label>
            <input asp-for="Endereco2" class="form-control" />
            <span asp-validation-for="Endereco2" class="text-white"></span>
        </div>
        <div class="form-group col-md-6 text-white">
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control" />
            <span asp-validation-for="Numero" class="text-white"></span>
        </div>
        <div class="form-group col-md-6 text-white">
            <label asp-for="Bairro" class="control-label"></label>
            <input asp-for="Bairro" class="form-control" />
            <span asp-validation-for="Bairro" class="text-white"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4 text-white">
            <label asp-for="Cep" class="control-label"></label>
            <input asp-for="Cep" class="form-control" />
            <span asp-validation-for="Cep" class="text-white"></span>
        </div>
        <div class="form-group col-md-4 text-white">
            <label asp-for="Cidade" class="control-label"></label>
            <input asp-for="Cidade" class="form-control" value="Araçtuba" />
            <span asp-validation-for="Cidade" class="text-white"></span>
        </div>
        <div class="form-group col-md-4 text-white">
            <label asp-for="Estado" class="control-label"></label>
            <input asp-for="Estado" class="form-control" value="SP" />
            <span asp-validation-for="Estado" class="text-white"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6 text-white">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-white"></span>
        </div>
        <div class="form-group col-md-6 text-white  ">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-white"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="form-group col-md-3">
            <input class="btn border-white text-white" type="submit" value="Concluir Pedido" />
            <a class="btn border-white text-white mt-3" asp-controller="Carrinho" asp-action="Index">Retornar ao Carrinho</a>
        </div>
        &nbsp;
    </div>
</form>
<div class="tamanho"></div>